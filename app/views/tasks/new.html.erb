<div class= "container">
    <div class="page-header">
      <h1>New Task</h1>
    </div>

<%= link_to "Tasks", tasks_path %> > New Task

  <form class="form-horizontal">
    <div class="form-group">
      <label for="new_task" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-3">
      <input type="description" class="form-control" id="new_task">
    </div>
  </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-3">
        <%= @task.submit "Create Task", "#", class: "btn btn-primary" %>
        <%= @task.submit "Cancel", "#", class: "btn btn-primary" %>
        <button type="cancel" class="btn btn-default">Cancel</button>
      </div>
    </div>
  </form>
</div>
