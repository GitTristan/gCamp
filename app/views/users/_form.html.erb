<div class="form-horizontal">

 <%= form_for @user do |f| %>


   <div class="form-group">
     <%= f.label :first_name, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= f.text_field :first_name, class: "form-control" %>
     </div>
   </div>

   <div class="form-group">
     <%= f.label :last_name, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= f.text_field :last_name, class: "col-md-4 form-control" %>
     </div>
   </div>

   <div class="form-group">
     <%= f.label :email, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= f.email_field :email, class: "col-md-4 form-control" %>
     </div>
   </div>


   <div class="form-group">
     <div class="col-md-offset-2 col-sm-6">
       <%= f.submit class: "btn btn-primary"%>
       <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
     </div>
   </div>
 <% end %>
</div>
