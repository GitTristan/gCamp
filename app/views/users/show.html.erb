<div class= "container">
  <div class="page-header">
    <% if current_user == @user || current_user.admin %>
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-info pull-right" %>
    <% end %>
    <h1><%= @user.first_name + " " + @user.last_name %></h1>
  </div>


  <dl class="dl-horizontal">
    <dt>First Name</dt>
    <dd><%= @user.first_name %></dd>
    <dt>Last Name</dt>
    <dd><%= @user.last_name %></dd>
    <% if current_user == @user || current_user.admin || current_user.project_member_of(@user) %>
      <dt>Email</dt>
      <dd><%= mail_to @user.email %></dd>
    <% end %>
    <dt>Pivotal Tracker Token</dt>
    <dd><%= "#{@user.pivotal_tracker_token.to_s.slice!(0..3)}*************************" %></dd>
  </dl>

</div>
