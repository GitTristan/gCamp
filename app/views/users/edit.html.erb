<div class= "container">
    <div class="page-header">
      <h1>Edit User</h1>
    </div>

    <div>
       <ol class="breadcrumb">
           <li><%=link_to "Users", users_path%></li>
           <li class="active">Edit User</li>
       </ol>
    </div>

    <div class="row">
      <div class="col-md-offset-2 col-md-7">
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <h3><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved</h3>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
              <li> <%= msg %> </li>
              <% end %>
            </ul>
          </div>
          <% end %>
        </div>
      </div>
    <br />

  <%= render partial: "form", locals: {button_name: "Update User"} %>

  <div class="well well-sm col-md-3 col-md-offset-2">
    <div class="text-center">
      <%= link_to  "Delete User", user_path(@user), method: :delete, class: "btn btn-danger",data: { confirm: "Are you sure?" }  %>
    </div>
  </div>
  <br />
